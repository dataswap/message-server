{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "NestJS Debug",
        "program": "${workspaceFolder}/node_modules/.bin/ts-node",
        "args": [
          "${workspaceFolder}/node_modules/.bin/nest",
          "start"
        ],
        "runtimeArgs": [
          "--nolazy",
          "-r",
          "tsconfig-paths/register"
        ],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "env": {
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  